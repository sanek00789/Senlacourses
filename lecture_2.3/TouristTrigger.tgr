trigger TouristTrigger on Tourist__c (before insert) {
    if (!TouristTriggerHandler.flag) {
        TouristTriggerHandler.flag = true;
        
        switch on Trigger.operationType {
            when AFTER_UPDATE {
                TouristTriggerHandler.onAfterUpdate(Trigger.newMap);
            }
            
            when BEFORE_INSERT {
                TouristService.markDuplicates(Trigger.new);
            }
        }
    }
    
    
    
}