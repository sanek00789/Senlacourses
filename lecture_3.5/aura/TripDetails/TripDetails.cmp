<aura:component >
    <aura:attribute name="tripName" type="String" access="public"/>
    <aura:attribute name="startDate" type="String" access="public"/>
    <aura:attribute name="endDate" type="String" access="public"/>
    <aura:attribute name="minimumAge" type="String" access="public"/>
    <aura:attribute name="seats" type="String" access="public"/>
    <aura:attribute name="departureSpacePoint" type="String" access="public"/>
    
    <lightning:card>
        <div class="slds-grid slds-gutters">
            <div class="slds-col ">
                <span>
                    <h3 class="slds-text-heading--medium slds-truncate">{!v.tripName}</h3>
                    <p><b>{!$Label.c.StartDate}:  </b><ui:outputText value="{!v.startDate}"/></p>
                    <p><b>{!$Label.c.EndDate}:  </b><ui:outputText value="{!v.endDate}"/></p>
                    <p><b>{!$Label.c.MinimumAge}:  </b><ui:outputText value="{!v.minimumAge}"/></p>
                </span>
            </div>
            <div class="slds-col row slds-card slds-box">
                <span>
                    <h3 class="slds-text-heading--medium slds-truncate"> </h3>
                    <p><b>   </b><ui:outputText /></p>
                    <p><b>{!$Label.c.Seats}:  </b><ui:outputText value="{!v.seats}"/></p>
                    <p><b>{!$Label.c.DepartureSpacePoint}:  </b><ui:outputText value="{!v.departureSpacePoint}"/></p>
                </span>
            </div>
        </div>
    </lightning:card>    
</aura:component>